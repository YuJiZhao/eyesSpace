<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.eyes.eyesspace.persistent.mapper.TrackMapper">
  <select id="getVisitNumByTime" resultType="java.lang.Integer">
    select count(*)
    from log_visit
    <where>
      <if test="start!=null">
        create_time &gt; #{start}
      </if>
      <if test="end!=null">
        and create_time &lt; #{end}
      </if>
    </where>
  </select>

  <select id="getVisitorNumByTime" resultType="java.lang.Integer">
    select count(distinct ip)
    from log_visit
    <where>
      <if test="start!=null">
        create_time &gt; #{start}
      </if>
      <if test="end!=null">
        and create_time &lt; #{end}
      </if>
    </where>
  </select>
</mapper>